generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model PatternCategory {
  id       Int       @id @default(autoincrement())
  patterns Pattern[]
  name     String    @unique
}

model Pattern {
  id                Int              @id @default(autoincrement())
  name              String
  description       String?
  score             String
  patternCategoryId Int?
  goalTempo         Int?
  startTempo        Int?
  bestTempo         Int?
  fastestTempo      Int?
  difficulty        Int?
  isMain            Boolean?
  records           Record[]
  exercise          Exercise?        @relation(fields: [exerciseId], references: [id])
  exerciseId        Int?
  category          PatternCategory? @relation(fields: [patternCategoryId], references: [id])
}

model Exercise {
  id          Int       @id @default(autoincrement())
  name        String
  description String?
  category    String?
  patterns    Pattern[]
}

model Record {
  id        Int      @id @default(autoincrement())
  tempo     Int
  rating    Int
  patternId Int
  pattern   Pattern  @relation(fields: [patternId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now()) @map("date")
}
